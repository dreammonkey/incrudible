{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "paths": {
            "ziggy-js": ["./vendor/tightenco/ziggy"],
            "@/*": ["./resources/js/*"],
            "@Incrudible/Components/*": [
                "./resources/js/Incrudible/Components/*"
            ],
            "@Incrudible/ui/*": ["./resources/js/Incrudible/ui/*"]
        }
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.d.ts"
    ]
}
